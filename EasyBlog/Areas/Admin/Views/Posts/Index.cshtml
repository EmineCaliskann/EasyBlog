@model List<Post>

@{
    ViewBag.Title = "Posts";
}
<div class="mb-2 d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-dark"> New Post</a>

</div>
<table class="table">
    <thead>

        <tr>
            <th> Id</th>
            <th> Image</th>
            <th>Title</th>
            <th>Category</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var post in Model)
        {
            <tr>
                <td> @post.Id  </td>
                <td><img src="~/img/posts/@post.Image" height="32" /> </td>
                <td> @post.Title  </td>
                <td> @post.Category.Name  </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@post.Id"><i class="fas fa-trash"></i></a>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@post.Id"><i class="fas fa-pencil"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>
